/**index.wxss**/

@import "../../commpents/listItem/listItem.wxss";
page{
    background: #eeeeee;
}
.bar1 {
    background: #A3D0C3;
}
.bar1 input {
    border: 2px solid #7BA7AB;
    border-radius: 5px;
    background: #F9F0DA;
    color: #9E9C9C;
    padding:40rpx;
}
.bar1 button {
    height: 84rpx;
    width: 84rpx;
    position: absolute;
    top: 0;
    right: 0;
    background: #7BA7AB;
    border-radius: 0 5px 5px 0;
    
}
.bar1 button:before {
    content: "\f002";
    font-family: FontAwesome;
    font-size: 16px;
    color: #F9F0DA;
}

.list-item-head .button{
    border-color:#00BFFF;
    color: #00BFFF;
    font-size: 22rpx;
}