
.header{
  margin-top: 10rpx;
}

.header text{
  display: block;
  font-size:26rpx; 
  color:#bfc8c8; 
  margin-bottom:20rpx;
}
.header .type{
  display:flex;
  flex-direction: row;
  justify-content:space-between;
  margin-bottom: 20rpx;
  padding:0 20rpx;
}

.header .type .li{
  width: 15%;
  height: 50rpx;
  line-height: 50rpx;
  color: white;
  text-align: center;
  font-size:24rpx;
  border-radius: 10rpx;
}

.color1{
  background: #899FB3;
}
.color2{
  background:#C3DE6C;
}
.input{
  border-bottom: 1px solid #eeeeee;
  width: 675rpx;
  margin:37rpx auto;
}
.inputPlaceholder{
  color:#cecece;
  font-size: 28rpx;
}

.content{
  width: 675rpx;
  margin: 0 auto;
}

.article{
  border:none;
  display: block;
  height: 250rpx;
  margin: 37rpx 0;
}

.content .img{
  height: 190rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:20rpx 0;
  /* position: relative; */
}

.content .img image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.content .img .image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  background-position: 25% 40%;
  background-size: cover;
}

.line{
  width:675rpx;
  height:16rpx;
  margin: 0 auto;
  background: #E2E2E2;
}
.info{
  margin: 20rpx auto;
}
.info label{
  display: inline-block;
  width: 19%;
  margin-left: 1%;
  font-size: 32rpx;
  color: #bfc8c8;
}
.user_info{
  width: 75%;
  margin: 0 2.5%;
  display:inline-block;
}
.footer{
  width:675rpx;
  margin-top:10rpx;

}

.footer button{
  display: block;
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 100rpx;
  background-color: #C3DE6C;
  border-radius: 0;
  position:fixed;
  bottom: 0;
}